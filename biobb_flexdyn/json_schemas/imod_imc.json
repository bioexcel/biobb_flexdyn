{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_flexdyn/json_schemas/1.0/imod_imc",
    "name": "biobb_flexdyn imod_imc",
    "title": "Wrapper of the imc tool",
    "description": "Compute a Monte-Carlo IC-NMA based conformational ensemble using the imc tool from the iMODS package.",
    "type": "object",
    "info": {
        "wrapped_software": {
            "name": "iMODS",
            "version": ">=1.0.4",
            "license": "other"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "input_pdb_path",
        "input_dat_path",
        "output_traj_path"
    ],
    "properties": {
        "input_pdb_path": {
            "type": "string",
            "description": "Input PDB file",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_flexdyn/raw/master/biobb_flexdyn/test/data/flexdyn/structure_cleaned.pdb",
            "enum": [
                ".*\\.pdb$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.pdb$",
                    "description": "Input PDB file",
                    "edam": "format_1476"
                }
            ]
        },
        "input_dat_path": {
            "type": "string",
            "description": "Input dat with normal modes",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_flexdyn/raw/master/biobb_flexdyn/test/data/flexdyn/imod_imode_evecs.dat",
            "enum": [
                ".*\\.dat$",
                ".*\\.txt$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.dat$",
                    "description": "Input dat with normal modes",
                    "edam": "format_1637"
                },
                {
                    "extension": ".*\\.txt$",
                    "description": "Input dat with normal modes",
                    "edam": "format_2330"
                }
            ]
        },
        "output_traj_path": {
            "type": "string",
            "description": "Output multi-model PDB file with the generated ensemble",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_flexdyn/raw/master/biobb_flexdyn/test/reference/flexdyn/imod_imc_output.pdb",
            "enum": [
                ".*\\.pdb$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.pdb$",
                    "description": "Output multi-model PDB file with the generated ensemble",
                    "edam": "format_1476"
                }
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "num_structs": {
                    "type": "integer",
                    "default": 500,
                    "wf_prop": false,
                    "description": "Number of structures to be generated"
                },
                "num_modes": {
                    "type": "integer",
                    "default": 5,
                    "wf_prop": false,
                    "description": "Number of eigenvectors to be employed"
                },
                "amplitude": {
                    "type": "integer",
                    "default": 1,
                    "wf_prop": false,
                    "description": "Amplitude linear factor to scale motion"
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "wf_prop": true,
                    "description": "Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "wf_prop": true,
                    "description": "Do not execute if output files exist."
                }
            }
        }
    },
    "additionalProperties": false
}